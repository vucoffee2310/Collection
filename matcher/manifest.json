{
  "manifest_version": 3,
  "name": "Audio Match Finder",
  "version": "1.0",
  "description": "Finds occurrences of a short audio pattern within a longer audio file using WASM for FFT.",
  "action": {
    "default_popup": "viewer.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["wasm/fft.wasm"],
      "matches": ["<all_urls>"]
    }
  ]
}
