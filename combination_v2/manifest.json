{
  "manifest_version": 3,
  "name": "AI Chat Paster with Auto-Tab",
  "version": "4.0",
  "description": "Upload files and paste alternating content to AI chats. Automatically opens new tabs when requests are submitted.",
  "permissions": [
    "storage",
    "tabs",
    "clipboardWrite",
    "webRequest"
  ],
  "host_permissions": [
    "https://gemini.google.com/*",
    "https://chatgpt.com/*",
    "https://chat.mistral.ai/*",
    "https://chat.deepseek.com/*",
    "https://copilot.microsoft.com/*",
    "https://www.kimi.com/*",
    "https://chat.z.ai/*",
    "https://chat.qwen.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/app*",
        "https://chatgpt.com/*",
        "https://chat.mistral.ai/chat/*",
        "https://chat.deepseek.com/*",
        "https://copilot.microsoft.com/*",
        "https://www.kimi.com/chat/*",
        "https://chat.z.ai/*",
        "https://chat.qwen.ai/*"
      ],
      "js": [
        "modules/config.js",
        "modules/utils.js",
        "modules/dom-finder.js",
        "modules/paste-handler.js",
        "content_script.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "incognito": "spanning"
}