{
"update_url": "https://clients2.google.com/service/update2/crx",

    "name"                     : "IDM Integration Module",
    "description"              : "__MSG_extension_desc__",
    "version"                  : "6.42.43",
    "author"                   : "Tonec FZE",
    "homepage_url"             : "http://www.internetdownloadmanager.com/",
    "default_locale"           : "en",

    "icons"                    : { "16": "images/logo16.png", "48": "images/logo48.png", "128": "images/logo128.png" },
    "action"                   : { "default_icon": { "16": "images/logo16.png", "32": "images/logo32.png" } },

    "background"               : { "service_worker": "background.js" },
    "content_scripts"          : [ { "js": [ "content.js" ], "matches": [ "*://*/*" ], "all_frames": true, "run_at": "document_start" } ],
    "web_accessible_resources" : [ { "resources": [ "document.js", "debug.js", "captured.js", "captured.html" ], "matches": [ "*://*/*" ], "use_dynamic_url": false } ],

    "permissions"              : [ "scripting", "tabs", "cookies", "contextMenus", "webNavigation", "webRequest", "declarativeNetRequest", "downloads", "downloads.shelf", "downloads.ui", "management", "storage", "proxy", "nativeMessaging" ],
    "optional_permissions"     : [ "notifications", "system.display" ],
    "host_permissions"         : [ "<all_urls>" ],
    "externally_connectable"   : { "matches": [ "*://*.internetdownloadmanager.com/*", "*://*.tonec.com/*" ] },

    "minimum_chrome_version"   : "109.0",
    "manifest_version"         : 3
}
