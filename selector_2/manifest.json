{
  "manifest_version": 3,
  "name": "Simple Inspector",
  "version": "1.0",
  "description": "Ctrl+Shift+I or right-click → Start Inspecting → Click element → Copy as Markdown",
  "permissions": ["activeTab", "scripting", "contextMenus"],
  "background": { "service_worker": "background.js" },
  "commands": {
    "start-inspecting": {
      "suggested_key": { "default": "Ctrl+Shift+I", "mac": "Command+Shift+I" },
      "description": "Start Inspecting Mode"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "turndown.js",
        "turndown-plugin-gfm.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}