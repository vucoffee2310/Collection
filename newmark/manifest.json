{
  "manifest_version": 3,
  "name": "HTML to Markdown Inspector",
  "version": "1.1",
  "description": "Inspect an element, click it, and copy its HTML as Markdown.",
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "type": "module"
    }
  ],
  "commands": {
    "start-inspecting": {
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "mac": "Command+Shift+I"
      },
      "description": "Start Inspecting Element"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "html-to-markdown-js/*",
        "html-to-markdown-js/plugins/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}