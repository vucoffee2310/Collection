{
  "manifest_version": 3,
  "name": "AI Studio Monitor",
  "version": "1.0",
  "description": "Monitor Google AI Studio requests and responses",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://aistudio.google.com/*"
  ],
  "action": {
    "default_title": "Open AI Studio Monitor"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://aistudio.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["xhr-interceptor.js"],
      "matches": ["https://aistudio.google.com/*"]
    }
  ]
}